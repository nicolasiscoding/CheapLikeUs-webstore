<div class="panel panel-default">
  <div class="panel-heading">
    <form role = "form" action = "/req/customerItemsQueryBy" method = "post">
      <input class="hidden" name="sortby" value= "<%=sortby%>">
      <input class="hidden" name="query" value= "<%=query%>">
      <button type="Submit" class="btn btn-default btn-sm pull-right">Sort By <%= sortby%></button>
    </form>
    <h4 class="panel-title">Search Results<br/><br/></h3>
  </div>

    <!-- List group -->

      <ul class = "list-group">
        <% data.forEach(function(row){ %>

          <li class = "list-group-item" id = "results-list" >
            <div class = "row">

              <div class = "col-xs-1 col-md-1">
                <button type="button" class="btn btn-default add-to-cart" data-name="<%= row.name %>" data-price="<%= row.price %>" data-stock = "<%= row.stockquantity %>" data-pid = "<%= row.ProductID %>" aria-label="Left Align">
                  <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>
                </button>
              </div>              

              <div class = "col-xs-5 col-md-3" id = "left">
                <%= row.name %>
              </div>

              <div class = "col-xs-8 col-md-6" id = "left">
                <%= row.description %>
              </div>

              <div class = "col-xs-4 col-md-2" id = "right">
                $ <%= row.price %>   
              </div>

            </div> 
          </li>
        <% }) %>
      </ul>


</div>
